body {
    background: #e6e6e7;
        width: 7.5rem;
}

#back_nav {
    background-color: #FFFFFF;
    width: 100%;
    height: 0.88rem;
    text-align: center;
    overflow: hidden;
    line-height: 0.88rem;
}

#back_nav .back_btn {
    float: left;
    width: 0.2rem;
    height: 0.36rem;
    margin: 0.26rem 0 0 0.28rem;
}

#back_nav .title {
    margin-left: -0.48rem;
    font-size: 0.34rem;
    color: #393939;
    letter-spacing: 0.03rem;
}
#pic_card {
    width: 100%;
    height: 3.1rem;
    background-image: url(../images/20171228112410.jpg);
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.pic_bank {
    width: 1rem;
    height: 1rem;
    overflow: hidden;
    border-radius: 50%;
    float: left;
    margin-top: 0.8rem;
    margin-left: 0.8rem;
}

.pic_bank img {
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
}

.card {
    height: 3rem;
    width: 70%;
    float: right;
}

.card #bank {
    font-size: 0.28rem;
    color: #FFFFFF;
    margin-top: 0.5rem;
}

.card #card_type {
    font-size: 0.26rem;
    color: #FFFFFF;
}

.card #card_num, #card_num span {
    font-size: 0.45rem;
    color: #FFFFFF;
    margin-top: 0.7rem;
}

#tip {
    width: 100%;
    padding: 0 0.4rem;
}

#tip p {
    font-size: 0.28rem;
    margin-top: 0.2rem;
}
#tip p span{
	font-size: 0.34rem;
	color: #df3732;
}
