/*提示信息*/
#tip {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-size: 0.24rem;
    padding: 0.1rem 0.2rem;
    background: rgba(0, 0, 0, 0.5);
    color: #ffffff;
    border-radius: 0.1rem;
    text-align: center;
    z-index: 99;
}

/* 头部导航 */
#back_nav {
    background-color: #F7F7F8;
    width: 100%;
    height: 0.88rem;
    text-align: center;
    overflow: hidden;
    line-height: 0.88rem;
}

#back_nav .back_btn {
    float: left;
    width: 0.2rem;
    height: 0.36rem;
    margin: 0.26rem 0 0 0.28rem;
}

#back_nav .title {
    margin-left: -0.48rem;
    font-size: 0.34rem;
    color: #6E6E6E;
    letter-spacing: 0.03rem;
}

/* 注册信息 */
#register_info {
    margin: 0 1.24rem;
    text-align: center;
}

#register_info .register_item {
    padding-top: 0.53rem;
    display: block;
    position: relative;
}

#register_info .register_item > input {
    font-size: 0.26rem;
    padding: 0.18rem 0 0.18rem 0.66rem;
    width: 100%;
    outline: none;
    border: none;
    border-bottom: 0.01rem solid #E7E7E6;
}

#register_info .register_item .icon_account {
    background: url(../images/icon_account.png) no-repeat center;
    background-size: cover;
    width: 0.42rem;
    height: 0.4rem;
    position: absolute;
    top: 0.67rem;
    left: 0;
}

#register_info .register_item .icon_code {
    background: url(../images/icon_code.png) no-repeat center;
    background-size: cover;
    width: 0.42rem;
    height: 0.42rem;
    position: absolute;
    top: 0.67rem;
    left: 0;
}

#register_info .register_item .getCode {
    position: absolute;
    text-align: center;
    line-height: 0.58rem;
    width: 1.54rem;
    height: 0.58rem;
    right: 0;
    top: 0.5rem;
    background-color: #D63F2B;
    color: #FFFFFF;
    font-size: 0.26rem;
    cursor: pointer;
    border: none;
    outline: none;
}

#register_info .register_item .icon_key {
    background: url(../images/icon_key.png) no-repeat center;
    background-size: cover;
    width: 0.37rem;
    height: 0.42rem;
    position: absolute;
    top: 0.67rem;
    left: 0;
}

#register_info .register_item .icon_code2 {
    background: url(../images/icon_code2.png) no-repeat center;
    background-size: cover;
    width: 0.4rem;
    height: 0.4rem;
    position: absolute;
    top: 0.67rem;
    left: 0;
}

/* 注册按钮 */
#register_info .register_btn {
    width: 100%;
    height: 0.9rem;
    background-color: #D63F2B;
    margin-top: 0.7rem;
    outline: none;
    border: none;
    border-radius: 0.5rem;
    font-size: 0.32rem;
    color: #FFFFFF;
    letter-spacing: 0.05rem;
    cursor: pointer;
    margin-bottom: 0.18rem;
}

/* 协议 */
#register_info .agreement .checkbox {
    width: 0.3rem;
    height: 0.3rem;
    vertical-align: middle;
}

#register_info .agreement .text {
    font-size: 0.2rem;
    vertical-align: middle;
}

#register_info .agreement .text > a {
    color: #D63F2B;
    font-size: 0.2rem;
}