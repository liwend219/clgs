body {
    background: #fff;
}

#back_nav {
    background-color: #df3732;
    width: 100%;
    height: 0.88rem;
    text-align: center;
    overflow: hidden;
    line-height: 0.88rem;
}

#back_nav .back_btn {
    float: left;
    width: 0.2rem;
    height: 0.36rem;
    margin: 0.26rem 0 0 0.28rem;
}

#back_nav .title {
    margin-left: -0.42rem;
    font-size: 0.34rem;
    color: #FFFFFF;
    letter-spacing: 0.03rem;
}

.forget_item {
    display: block;
    position: relative;
    width: 100%;
    height: 0.88rem;
    border-bottom: 0.01rem solid #E7E7E6;
}

ul .forget_item:first-child {
    margin-top: 0.8rem;
}

.forget_item > input {
    font-size: 0.26rem;
    padding: 0.28rem 0 0.28rem 0.66rem;
    width: 70%;
    outline: none;
    border: none;
}

.i_font {
    float: left;
    font-size: 0.32rem;
    display: inline-block;
    width: 30%;
    text-align: left;
    padding-left: 0.3rem;
    margin-top: 0.23rem;
}

.forget_item #getCode {
    display: inline-block;
    position: absolute;
    text-align: center;
    line-height: 0.58rem;
    width: 1.54rem;
    height: 0.58rem;
    right: 0.3rem;
    top: 0.15rem;
    background-color: #D63F2B;
    color: #FFFFFF;
    font-size: 0.26rem;
    cursor: pointer;
}

/* 确定按钮 */
.confirm_btn {
    width: 75%;
    height: 0.9rem;
    background-color: #D63F2B;
    margin-top: 0.7rem;
    outline: none;
    border: none;
    border-radius: 0.5rem;
    font-size: 0.32rem;
    color: #FFFFFF;
    letter-spacing: 0.05rem;
    cursor: pointer;
    margin-bottom: 0.18rem;
}

/*选择*/
#bank {
    width: 25%;
    font-size: 0.32rem;
    padding: 0.2rem 0;
    border: none;
    outline: none;
    margin-left: 0.64rem;
}

#selProvince {
    width: 25%;
    font-size: 0.32rem;
    padding: 0.2rem 0;
    border: none;
    outline: none;
    margin-left: 0.64rem;
}

#selCity {
    width: 25%;
    font-size: 0.32rem;
    padding: 0.2rem 0;
    border: none;
    outline: none;
    margin-left: 0.4rem;
}

#cxk {
    font-size: 0.32rem;
    margin-left: 0.5rem;
}

.box_btn {
    width: 100%;
    text-align: center;
}

input::-webkit-input-placeholder, textarea::-webkit-input-placeholder {
    color: #666;
}

input:-moz-placeholder, textarea:-moz-placeholder {
    color: #666;

}

input::-moz-placeholder, textarea::-moz-placeholder {
    color: #666;
}

input:-ms-input-placeholder, textarea:-ms-input-placeholder {
    color: #666;
}

input[type=number] {
    -moz-appearance: textfield;
}

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

/*提示信息*/
#tip {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-size: 0.24rem;
    padding: 0.1rem 0.2rem;
    background: rgba(0, 0, 0, 0.5);
    color: #ffffff;
    border-radius: 0.1rem;
    text-align: center;
    z-index: 99;
}
