#container {
    width: 7.5rem;
}

/* 头部导航 */
#container #back_nav {
    background-color: #2f2f33;
    width: 100%;
    height: 0.88rem;
    text-align: center;
    overflow: hidden;
    line-height: 0.88rem;
}

#container #back_nav .back_btn {
    float: left;
    width: 0.2rem;
    height: 0.36rem;
    margin: 0.26rem 0 0 0.28rem;
}

#container #back_nav .title {
    margin-left: -0.48rem;
    font-size: 0.34rem;
    color: #ffffff;
    letter-spacing: 0.03rem;
}

/*消息内容*/
.notice_content {
    padding: 0.3rem 0 0.3rem 0.58rem;
    overflow: hidden;
    position: relative;
}

.notice_content .notice_time {
    font-style: normal;
    font-size: 0.26rem;
    color: #393939;
    display: block;
    text-align: center;
}

.notice_content .notice_text:before {
    content: "";
    position: absolute;
    top: 2.2rem;
    left: 0.4rem;
    width: 0;
    height: 0;
    border-top: 0.2rem solid transparent;
    border-right: 0.2rem solid #e6e6e7;
    border-bottom: 0.2rem solid transparent;
}

.notice_content .notice_text {
    font-size: 0.26rem;
    color: #393939;
    width: 4.62rem;
    background: #e6e6e7;
    margin-top: 0.3rem;
    padding: 0.3rem 0.2rem;
    float: left;
    border-radius: 0.25rem;
}