                    vm.dytj = []
                    for(i;i<vm.dangqianjia.length;i++){
                        //交易金额
                        var jiaoyijine =Math.ceil(vm.dangqianjia[i].当前价格*vm.datas[i].volumeHold*vm.tdata.tradingCountRatio.value/100)*100
                        //递延条件
                        vm.dytj.push((jiaoyijine*vm.tdata.deferThreshHoldRatio.value)-(jiaoyijine/vm.tdata.levers.levers[0].value))
                    }
                },
                setZyzs (val,index) {
                    if(val.status != 4){
                        return
                    }
                    console.log(val)
                    vm.zhiyingJine = val.quitGain;
                    if(val.quitLoss>0){
                        vm.zhisunJine = -val.quitLoss;
                    }else{
                        vm.zhisunJine = val.quitLoss;
                    }
                    
                    vm.tIndex = index
                    vm.tItem = val;
                    
                    if(val.status == 4){
                        $('#inquiry_model').css('display','block')
                        vm.stop()
                        // var top = $(document).scrollTop();
                        // $(document.body).addClass('body-fle')
                    }
                },
                setJiaoyi (val,key){
                    if(val.holdDays <= 1 || val.status != 4){
                        return 
                    }else {
                        vm.tItem = val;
                        console.log(vm.tItem.sid)
                        $.ajax({
                            type:'POST',
                            url:'http://139.196.178.5:8006/api/union/strategy/outCloseStrategy.json',
                            dataType: "json",
                            async: true,
                            data:{
                                "UserID": sessionStorage.getItem('my_id'),
                                "cid": sessionStorage.getItem('cid'),
                                "id":vm.tItem.sid,//策略号ID
                                "isAlwaysClose": 1
                            },
                            success:function (data){
                                vm.init()
                                if(data.rs){
                                    $('#tip').text(data.msg)
                                    $('#tip').css('display','block')
                                    window.clearTimeout(time1)
                                    var time1=window.setTimeout(function(){
                                        $('#tip').css('display','none')
                                    },2500);
                                }else{
                                    $('#tip').text(data.msg)
                                    $('#tip').css('display','block')
                                    window.clearTimeout(time1)
                                    var time1=window.setTimeout(function(){
                                        $('#tip').css('display','none')
                                    },2500);
                                }
                                console.log(data)
                            },
                            error:function (error){
                                console.log(error)
                            }
                        })
                    }
                    
                },
                //判断是否交易时间
                CompareDate(t1,t2,t3,t4){
                    var date = new Date();
                    var h = date.getHours()
                    var m = date.getMinutes()
                    var a = t1.split(":");    
                    var b = t2.split(":");
                    var c = t3.split(":");    
                    var d = t4.split(":");
                    if((date.setHours(h,m) > date.setHours(a[0],a[1])&&date.setHours(h,m) < date.setHours(b[0],b[1]))||(date.setHours(h,m) > date.setHours(c[0],c[1])&&date.setHours(h,m) < date.setHours(d[0],d[1]))){
                        return true
                    }else{
                        return false
                    }
                },
                //设置止盈止损
                sure (){
                    //交易金额
                    var jiaoyijine =Math.ceil(vm.dangqianjia[vm.tIndex].当前价格*vm.datas[vm.tIndex].volumeHold*vm.tdata.tradingCountRatio.value/100)*100
                    // 止盈线
                    var tzhiying = jiaoyijine*vm.tdata.quitGainRatioList.value
                    console.log(tzhiying)
                    // 止损线
                    var tzhisun = jiaoyijine/vm.tdata.levers.levers[0].value*vm.tdata.levers.levers[0].quitLossLineRatio.value
                    console.log(tzhisun)
                    if(vm.zhiyingJine == '' || vm.zhiyingJine == ''){
                        // alert('止盈或止损金额设置有误！')
                        $('#tip').text('止盈或止损金额设置有误！')
                        $('#tip').css('display','block')
                        window.clearTimeout(time1)
                        var time1=window.setTimeout(function(){
                            $('#tip').css('display','none')
                        },2500);
                        return
                    }else if(vm.zhiyingJine > tzhiying || vm.zhiyingJine < 0 ){
                        // alert('止盈金额区间为0 ~ '+tzhiying+'之间')
                        $('#tip').text('止盈金额区间为0 ~ '+tzhiying+'之间')
                        $('#tip').css('display','block')
                        window.clearTimeout(time1)
                        var time1=window.setTimeout(function(){
                            $('#tip').css('display','none')
                        },2500);
                        return 
                    }else if(vm.zhisunJine > 0 || vm.zhisunJine < -tzhisun){
                        // alert('止损金额区间为0 ~ -'+tzhisun+'之间')
                        $('#tip').text('止损金额区间为0 ~ -'+tzhisun+'之间')
                        $('#tip').css('display','block')
                        window.clearTimeout(time1)
                        var time1=window.setTimeout(function(){
                            $('#tip').css('display','none')
                        },2500);
                        return 
                    }else if(vm.zhiyingJine % 1 != 0 || vm.zhisunJine % 1 != 0){
                        // alert('数据格式错误！')
                        $('#tip').text('数据格式错误！')
                        $('#tip').css('display','block')
                        window.clearTimeout(time1)
                        var time1=window.setTimeout(function(){
                            $('#tip').css('display','none')
                        },2500);
                        return
                    }else{
                        $.ajax({
                            type:'POST',
                            url:'http://139.196.178.5:8006/api/union/strategy/outSetQuitGainLoss.json',
                            data:{
                                "UserID":sessionStorage.getItem('my_id'),
                                "cid":sessionStorage.getItem('cid'),
                                "id":vm.tItem.sid,
                                "quitGain":vm.zhiyingJine,
                                "quitLoss":vm.zhisunJine,
                            },
                            async:true,
                            dataType:"json",
                            success:function (data){
                                console.log(data)
                                if(data.rs){
                                    $('#tip').text(data.msg)
                                    $('#tip').css('display','block')
                                    window.clearTimeout(time1)
                                    var time1=window.setTimeout(function(){
                                        $('#tip').css('display','none')
                                    },2500);
                                    vm.zhiyingJine='',
                                    vm.zhisunJine='',
                                    $('#inquiry_model').css('display','none')
                                    vm.init()
                                }else{
                                    $('#tip').text(data.msg)
                                    $('#tip').css('display','block')
                                    window.clearTimeout(time1)
                                    var time1=window.setTimeout(function(){
                                        $('#tip').css('display','none')
                                    },2500);
                                    vm.zhiyingJine='',
                                    vm.zhisunJine='',
                                    $('#inquiry_model').css('display','none')
                                }
                            },
                            error:function (error){
                                console.log(error)
                            }
                        })
                    }
                    vm.move()
                    // $(document.body).removeClass('body-fle')
                    
                    
                    // $('#inquiry_model').css('display','none')
                },
                cancel (){
                    this.zhiyingJine = '';
                    this.zhisunJine = '';
                    $('#inquiry_model').css('display','none')
                    vm.move()
                    // $(document.body).removeClass('body-fle')
                },
                // 禁止页面滑动
                stop(){
                    var mo=function(e){e.preventDefault();};
                    document.body.style.overflow='hidden';
                    document.addEventListener("touchmove",mo,false);//禁止页面滑动
                },
                // 允许页面滑动
                move(){
                    var mo=function(e){e.preventDefault();};
                    document.body.style.overflow='';//出现滚动条
                    document.removeEventListener("touchmove",mo,false);
                }
            },
            filters:{
                setTime:function(val){
                    var date = new Date(parseInt(val.slice(6,-2)))
                    Y = date.getFullYear() + '-';
                    M = (date.getMonth()+1 < 10 ? '0'+(date.getMonth()+1) : date.getMonth()+1) + '-';
                    D = (date.getDate() <10 ? '0'+(date.getDate()) : date.getDate())+ ' ';
                    h = (date.getHours() <10 ? '0'+(date.getHours()) : date.getHours())+ ':';
                    m = (date.getMinutes() <10 ? '0'+(date.getMinutes()) : date.getMinutes())+ ':';
                    s = (date.getSeconds() <10 ? '0'+(date.getSeconds()) : date.getSeconds());
                    return Y+M+D+h+m+s;
                },
                setcolor:function (val){
                    if(val > 0){
                        return '+'+val
                    }else{
                        return val
                    }
                },
                setText:function (val){
                    var str = vm.tdata.tradingTimeLimit.value
                    if(!vm.CompareDate(str.slice(0,5),str.slice(6,11),str.slice(12,17),str.slice(18))){
                        return '非交易时段'
                    }
                    if(val == 4) {
                        return '平仓'
                    }else if(val == 5){
                        return '委托卖出'
                    }else if(val == 8){
                        return '等待清算'
                    }else{
                        
                    }
                },
                setZhisun:function (val){
                    if(val>0){
                        return '-'+val
                    }else {
                        return val
                    }
                },
            }
        })
