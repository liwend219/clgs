/* 内容区 */
#container #logoIn_box {
    margin: 0 1.24rem;
    padding: 2.26rem 0 2.94rem 0;
}

/* 头部logo */
#logoIn_box .logo_box {
    text-align: center;
    margin-bottom: 0.56rem;
}

#logoIn_box .logo_box .logo {
    width: 1.2rem;
    height: 1.2rem;
    display: block;
    margin-bottom: 0.52rem;
}

#logoIn_box .logo_box .title {
    font-size: 0.3rem;
    color: #CB2320;
    font-weight: 600;
    letter-spacing: 0.03rem;
}

/* 登入信息 */
#info_box #logoIn_info .logoIn_item {
    padding-top: 0.53rem;
    display: block;
    position: relative;
}

#info_box #logoIn_info .logoIn_item input {
    font-size: 0.26rem;
    padding: 0.18rem 0 0.18rem 0.66rem;
    width: 100%;
    outline: none;
    border: none;
    border-bottom: 0.01rem solid #E7E7E6;
}

#info_box #logoIn_info .logoIn_item .icon_account {
    background: url(../images/icon_account.png) no-repeat center;
    background-size: cover;
    width: 0.42rem;
    height: 0.4rem;
    position: absolute;
    top: 0.67rem;
    left: 0;
}

#info_box #logoIn_info .logoIn_item .icon_key {
    background: url(../images/icon_key.png) no-repeat center;
    background-size: cover;
    width: 0.37rem;
    height: 0.42rem;
    position: absolute;
    top: 0.67rem;
    left: 0;
}

/* 记住&忘记密码 */
#info_box #option {
    overflow: hidden;
    width: 100%;
    margin-top: 0.18rem;
    line-height: 0.3rem;
}

#info_box #option .checkbox {
    float: left;
    width: 0.3rem;
    height: 0.3rem;
    margin-left: 0.12rem;
}

#info_box #option .remember_pw {
    float: left;
    font-size: 0.2rem;
    margin-left: 0.16rem;
}

#info_box #option .forget_pw > a {
    float: right;
    font-size: 0.2rem;
    margin-right: 0.12rem;
    color: #000000;
}

/* 登入按钮 */
#info_box .logoIn_btn {
    width: 100%;
    height: 0.9rem;
    background-color: #D63F2B;
    margin-top: 0.7rem;
    outline: none;
    border: none;
    border-radius: 0.5rem;
    font-size: 0.32rem;
    color: #FFFFFF;
    letter-spacing: 0.05rem;
    cursor: pointer;
}

/* 注册按钮 */
#container .register_btn {
    width: 100%;
    height: 0.9rem;
    outline: none;
    border: none;
    border-top: 0.01rem solid #B2B2B2;
    cursor: pointer;
    background-color: #F7F7F8;
    font-size: 0.26rem;
    color: #6E6E6E;
    position: fixed;
    bottom: 0;
}

/*提示信息*/
#tip {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-size: 0.24rem;
    padding: 0.1rem 0.2rem;
    background: rgba(0, 0, 0, 0.5);
    color: #ffffff;
    border-radius: 0.1rem;
    text-align: center;
    z-index: 99;
}
