#container {
    width: 7.5rem;
}

/* 头部导航 */
#container #back_nav {
    background-color: #2f2f33;
    width: 100%;
    height: 0.88rem;
    text-align: center;
    overflow: hidden;
    line-height: 0.88rem;
}

#container #back_nav .back_btn {
    float: left;
    width: 0.2rem;
    height: 0.36rem;
    margin: 0.26rem 0 0 0.28rem;
}

#container #back_nav .title {
    margin-left: -0.48rem;
    font-size: 0.34rem;
    color: #ffffff;
    letter-spacing: 0.03rem;
}

/*信息公共部分*/
.title_box .title {
    font-size: 0.44rem;
    color: #393939;
    float: left;
}

.title_box .time {
    font-size: 0.26rem;
    color: #9c9c9c;
    font-style: normal;
    float: right;
    margin-top: 0.12rem;
}

.content_box {
    margin-top: 0.16rem;
}

.content_box .text {
    float: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 5rem;
    font-size: 0.26rem;
    color: #656565;
}

.content_box .num {
    float: right;
    width: 0.38rem;
    height: 0.38rem;
    background: #d63f2b;
    border-radius: 0.5rem;
    font-style: normal;
    font-size: 0.2rem;
    text-align: center;
    line-height: 0.38rem;
    color: #ffffff;
}

/*公告消息*/
.notice_box {
    padding: 0.2rem 0.3rem 0.2rem 0.6rem;
    overflow: hidden;
    border-bottom: 0.01rem solid #d6d5d9;
    cursor: pointer;
}

.notice_box .icon_notice {
    float: left;
    width: 0.62rem;
    height: 0.64rem;
    margin-top: 0.25rem;
}

.notice_box div {
    margin-left: 1.1rem;
    overflow: hidden;
}

/*通知消息*/
.news_box {
    padding: 0.2rem 0.3rem 0.2rem 0.6rem;
    overflow: hidden;
    border-bottom: 0.01rem solid #d6d5d9;
    cursor: pointer;
}

.news_box .icon_new {
    float: left;
    width: 0.6rem;
    height: 0.54rem;
    margin-top: 0.25rem;
}

.news_box div {
    margin-left: 1.1rem;
    overflow: hidden;
}