body {
    background: #e6e6e7;
}

#container {
    margin-bottom: 1rem;
}

/* 头部导航 */
#container #back_nav {
    background-color: #ffffff;
    width: 100%;
    height: 0.88rem;
    text-align: center;
    overflow: hidden;
    line-height: 0.88rem;
}

#container #back_nav .title, #back_nav a {
    margin-left: 0.58rem;
    font-size: 0.34rem;
    color: #393939;
    letter-spacing: 0.03rem;
}

#container #back_nav .close {
    float: right;
    font-size: 0.3rem;
    color: #393939;
    letter-spacing: 0.03rem;
    margin-right: 0.28rem;
    cursor: pointer;
}

/*用户信息*/
.user_info {
    border-top: 0.02rem solid #e6e6e7;
    background: #ffffff;
    padding: 0.2rem 0.3rem;
    overflow: hidden;
    cursor: pointer;
}

.user_info .icon {
    width: 1.2rem;
    height: 1.2rem;

}

.user_info .div_icon {
    width: 1.2rem;
    height: 1.2rem;
    border-radius: 50%;
    overflow: hidden;
    float: left;
}

.user_info .info {
    padding-left: 0.3rem;
    overflow: hidden;
    margin-top: 0.15rem;
}

.user_info .info .info_name {
    font-size: 0.42rem;
    color: #393939;
}

.user_info .info .info_phone {
    font-size: 0.26rem;
    color: #393939;
}

.user_info .info .real_state {
    font-size: 0.2rem;
    color: #ffffff;
    background: #D63F2B;
    font-style: normal;
    padding: 0.05rem 0.15rem;
    border-radius: 0.15rem;
    margin-left: 0.2rem;
}

.user_info .info .icon_arrow {
    width: 0.16rem;
    height: 0.27rem;
    float: right;
    margin-top: -0.21rem;
}

/*选项部分*/
.items {
    background: #ffffff;
    overflow: hidden;
    text-align: center;
    margin-top: 0.3rem;
}

.items div:nth-child(1) {
    border-left: none;
}

.items div {
    float: left;
    padding: 0.1rem 0;
    width: 33.3%;
    border-left: 0.01rem solid #efefef;
    cursor: pointer;
}

.items div img {
    width: 0.58rem;
    height: 0.56rem;
}

.items div span {
    display: block;
    font-size: 0.32rem;
    color: #363636;
    margin-top: 0.1rem;
}

.lists ul {
    background: #ffffff;
    margin-top: 0.3rem;
}

.lists ul li {
    padding: 0.2rem 0;
    margin: 0 0.3rem;
    overflow: hidden;
    border-bottom: 0.01rem solid #ededed;
    cursor: pointer;
}

.lists ul li:last-child {
    border-bottom: none;
}

.lists ul li img {
    width: 0.5rem;
    height: 0.5rem;
    vertical-align: middle;
}

.lists ul li span {
    font-size: 0.32rem;
    color: #393939;
    vertical-align: middle;
    margin-left: 0.2rem;
}

.lists ul li i {
    background: url("../images/arrow.png") no-repeat center;
    background-size: cover;
    width: 0.16rem;
    height: 0.27rem;
    float: right;
    margin-top: 0.13rem;
}

/*实名认证*/
.tip {
    width: 100%;
    padding: 0.2rem 0.3rem;
    background-image: url(../images/20171206093326.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    color: #e4e4e4;
    margin-top: 0.3rem;
}

.tip #left {
    float: left;
}

.tip .title {
    font-size: 0.38rem;
    font-weight: 600;
    margin-bottom: 0.1rem;
}

.tip img {
    width: 1.4rem;
    float: right;
    margin-top: 0.21rem;
}

.clear {
    clear: both;
}
